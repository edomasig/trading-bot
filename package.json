{
  "name": "okx-crypto-trading-bot",
  "version": "1.0.0",
  "description": "A simple cryptocurrency trading bot for OKX exchange using BTC/USDT pair",
  "main": "bot.js",
  "scripts": {
    "start": "node bot.js",
    "start:enhanced": "node enhanced-bot.js",
    "start:interactive": "node interactive-bot.js",
    "start:background": "pm2 start enhanced-bot.js --name okx-enhanced-bot",
    "start:basic": "node bot.js",
    "start:btc": "node -r dotenv/config bot.js dotenv_config_path=.env.btc",
    "start:eth": "node -r dotenv/config bot.js dotenv_config_path=.env.eth",
    "start:sol": "node -r dotenv/config bot.js dotenv_config_path=.env.sol",
    "start:wlfi": "node -r dotenv/config bot.js dotenv_config_path=.env.wlfi",
    "enhanced:btc": "node -r dotenv/config enhanced-bot.js dotenv_config_path=.env.btc",
    "enhanced:sol": "node -r dotenv/config enhanced-bot.js",
    "interactive": "node interactive-bot.js",
    "interactive:setup": "node interactive-setup.js",
    "demo:interactive": "node demo-interactive.js",
    "demo:setup": "node demo-interactive-setup.js",
    "demo:targets": "node demo-target-logging.js",
    "dev": "node bot.js",
    "stop": "pm2 stop okx-enhanced-bot",
    "restart": "pm2 restart okx-enhanced-bot",
    "logs": "pm2 logs okx-enhanced-bot",
    "status": "pm2 status",
    "test": "node test-connection.js",
    "test:enhanced": "node test-enhanced.js",
    "test:debug": "node test-debug.js",
    "test:enhanced-debug": "node test-enhanced-debug.js",
    "history": "node view-transactions.js",
    "watch": "node view-transactions.js --watch",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:start:enhanced": "pm2 start ecosystem.config.js --only sol-trading-bot-enhanced",
    "pm2:start:basic": "pm2 start ecosystem.config.js --only sol-trading-bot-basic",
    "pm2:stop": "pm2 stop sol-trading-bot-enhanced",
    "pm2:stop:all": "pm2 stop all",
    "pm2:restart": "pm2 restart sol-trading-bot-enhanced",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs sol-trading-bot-enhanced",
    "pm2:logs:basic": "pm2 logs sol-trading-bot-basic",
    "pm2:logs:live": "pm2 logs sol-trading-bot-enhanced --lines 50",
    "pm2:delete": "pm2 delete sol-trading-bot-enhanced",
    "pm2:delete:all": "pm2 delete all",
    "pm2:monitor": "pm2 monit",
    "monitor": "node monitor.js"
  },
  "keywords": [
    "cryptocurrency",
    "trading",
    "bot",
    "okx",
    "bitcoin",
    "automated-trading"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^4.1.2",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "inquirer": "^8.2.4"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
