# Environment Variables for OKX Trading Bot - LIVE TRADING MODE

# OKX LIVE API Credentials
OKX_API_KEY=
OKX_SECRET_KEY=
OKX_PASSPHRASE=  # ⚠️ REPLACE WITH YOUR ACTUAL PASSPHRASE

# Trading Configuration - LIVE TRADING WITH PROPER FUNDING
TRADING_SYMBOL=BTC-USDT
PRICE_CHANGE_THRESHOLD=0.005   # 0.3% - Conservative but reasonable
CHECK_INTERVAL_SECONDS=10      # Good responsiveness
MIN_ORDER_SIZE=1               # Reasonable minimum for BTC
MAX_USDT_TO_USE=8              # $8 USDT per trade - 8% of balance
MAX_DAILY_TRADES=8             # Reasonable daily limit

# API Configuration - LIVE ENVIRONMENT
OKX_BASE_URL=https://www.okx.com
OKX_API_VERSION=api/v5
OKX_DEMO_MODE=false            # LIVE TRADING MODE ENABLED
                            
# Enhanced Features - LIVE TRADING BASIC SAFETY
ENABLE_TECHNICAL_ANALYSIS=false   # Keep simple for reliability
ENABLE_RISK_MANAGEMENT=false      # DISABLED - too aggressive for live testing
ENABLE_ADAPTIVE_THRESHOLD=false   # Fixed thresholds for predictability
ENABLE_FIXED_TARGETS=false        # Keep disabled - dangerous mode
ENABLE_STOP_LOSS=true             # Keep basic stop loss only

# Risk Management - CONSERVATIVE LIVE SETTINGS
STOP_LOSS_PERCENTAGE=0.01         # 1% stop loss - tight control
TAKE_PROFIT_PERCENTAGE=0.015      # 1.5% take profit - conservative
POSITION_SIZE_PERCENTAGE=0.8      # 80% of available balance
STARTUP_MODE=BUY_FIRST
RISK_LEVEL=CONSERVATIVE           # Most conservative setting
ENABLE_NOTIFICATIONS=true
AUTO_RESTART=false                # Manual control for live trading
